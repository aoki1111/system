<% provide(:title, 'パスワードの再設定') %>

<div class="row">
  <div class="col-md-6 col-md-offset-3 form">
    <h1>パスワードの再設定</h1>
    <%= form_for(@user, url: password_reset_path(params[:id])) do |f| %>

      <%= hidden_field_tag :email, @user.email %>
      <div>
          <%= f.label :password, "再設定パスワード" %>
          <%= f.password_field :password, class: 'form-control form-under-line password_form' %>
      </div>
      <div class="error_message">
          <ul>
              <% @user.errors.full_messages_for(:password).each do |message| %>
                <li><%= message %></li>
              <% end %>
          </ul>
      </div>
      <div>
          <%= f.label :password_confirmation, "再設定パスワード（確認）" %>
          <%= f.password_field :password_confirmation, class: 'form-control form-under-line password_form' %>
      </div>
      <div class="error_message">
          <ul>
              <% @user.errors.full_messages_for(:password_confirmation).each do |message| %>
                <li><%= message %></li>
              <% end %>
          </ul>
      </div>

      <%= f.submit "パスワードを更新する", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
