       <li><%= link_to "#" do %><%= icon('fas', 'calculator')  %><span style="margin-right:1rem;">GAPスコア試算</span><% end %></li>
       <li><%= link_to "#" do %><%= icon('fas', 'book') %><span>GAPリファレンス</span><% end %></li>
     </ul>
   </li>
   <li class="user">
     <a href=""><%= icon('fas', 'user') %><span>ユーザーメニュー</span></a>
     <ul>
       <li><%= link_to user_path(current_user) do %><%= icon('fas', 'id-card', class:"fa-lg") %><span style="margin-right:2rem;">ユーザー情報</span><% end %></li>
       <li><%= link_to edit_user_path(current_user) do %><%= icon('fas', 'wrench', class:"fa-lg") %><span>ユーザー情報編集</span><% end %></li>
       <li><%= link_to logout_path, method: :delete do %><%= icon('fas', 'sign-out-alt', class:"fa-lg") %><span style="margin-right:3rem;">ログアウト</span><% end %></li>
     </ul>
   </li>
 </ul>
 <% else %>
 <ul class="unlogged-in-menu">
   <li><%= link_to introducing_path do %><%= icon('fas', 'box') %></span><span>出荷管理機能</span><% end %> </li>
