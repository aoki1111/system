   <li><%= link_to "#" do %><span></span><% end %></li>
   <li id="registry"><%= link_to signup_path do %><span class="glyphicon glyphicon-edit"></span><span>会員登録</span><% end %></li>
<li id="login"><%= link_to login_path do %><span class="glyphicon glyphicon glyphicon-log-in"></span><span>ログイン</span><% end %></li>
 </ul>
 <% end %>
