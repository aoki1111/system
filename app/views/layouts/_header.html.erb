       <li><%= link_to "#" do %><%= icon('fas', 'map-signs')  %><span>圃場管理</span><% end %></li>
       <li><%= link_to "#" do %><%= icon('fas', 'pencil-alt') %><span>生産記録</span><% end %></li>
